{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}
<article{% if page %}{{ attributes.addClass(classes) }}{% else %}{{ attributes.addClass(classes) }}{% endif %}>

  {{ title_prefix }}
  {% if not page and view_mode != "full" %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div class="wdn-grid-set"{{ content_attributes }}>
    <div class="wdn-col-full bp960-wdn-col-four-fifths bp1280-wdn-col-three-fourths bp1600-wdn-col-two-thirds">
      {{ content }}
    </div>
  </div>

</article>
